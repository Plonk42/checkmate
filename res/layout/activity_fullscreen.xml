<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".Rookoid">

	<name.matco.rookoid.ui.Chessboard
	    android:id="@+id/chessboard"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:layout_marginTop="100dip"/>

	<LinearLayout
		android:orientation="horizontal"
		android:gravity="top"
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dip"
		android:layout_marginTop="45dip">

		<Button
		    android:id="@+id/restart_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/restart_text" />
		
		<Button
		    android:id="@+id/previous_move_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/previous_move" />
		
		<Button
		    android:id="@+id/next_move_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/next_move" />
		
			<LinearLayout
				android:orientation="vertical"
				android:gravity="top"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">

				<Chronometer
				    android:id="@+id/white_timer"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" />
				
				<Chronometer
				    android:id="@+id/black_timer"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content" />
			</LinearLayout>
	</LinearLayout>

</RelativeLayout>
